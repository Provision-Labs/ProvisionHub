# pnpm configuration for Next.js compatibility
# This ensures proper hoisting for Next.js and React dependencies

# Enable shamefully-hoist for better Next.js compatibility
shamefully-hoist=true

# Alternative: use node-linker=hoisted for full hoisting
# node-linker=hoisted

# Strict peer dependencies (recommended)
strict-peer-dependencies=false

# Auto install peers
auto-install-peers=true
